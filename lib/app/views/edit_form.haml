#edit-idea.reveal-modal
  %form{ action: "/#{idea.id}", method: 'POST' }
    %input{ type: "hidden", name: "_method", value: "put" }
    -if idea.id
      %h2 Edit your Idea
    -else
      %h2 Create your New Idea!
      %p
        %em For Rizzle.
    %input{name: "idea[title]", placeholder: "Title", 
        type: "text", value: "#{idea.title}"}/
    %textarea{name: "idea[description]", placeholder: "Description"}
      =idea.description
    %input{name: "idea[tags]", placeholder: "Tags - ex: Eat, Sleep, Breath", 
           type: "text", value: "#{idea.raw_tags}"}/
    %input.button.new{type: "submit", value: "EDIT THAT MUG!"}/
